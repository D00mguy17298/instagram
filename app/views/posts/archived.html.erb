<h1>Archived Post</h1>
<% if @posts.empty? %>
  <p>No archived posts found.</p>
<% else %>
  <% @posts.each do |post| %>
    <% if post.status == 'archived' %>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <p><%= link_to 'Edit', edit_post_path(post) %></p>
      <p><%= link_to 'Back', posts_path %></p>
    <% end %>
  <% end %>
<% end %>