<% if current_user.followees.any? %>
  <% current_user.followees.each do |user| %>
    <% user.posts.each do |post| %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <%= link_to post_path(post) do %>
          <h3><%= post.title %></h3>
        <% end %>
        <%= social_share_button_tag(post.title) %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h1>Suggested for you</h1>
  <% User.order(followers_count: :desc).limit(10).each do |user| %>
    <% user.posts.each do |post| %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <%= link_to post_path(post) do %>
          <h3><%= post.title %></h3>
        <% end %>
        <%= social_share_button_tag(post.title) %>
      </div>
    <% end %>
  <% end %>
<% end %>
